<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.codepath.simpletodo.Activities.EditItemActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <include
        android:id="@+id/toolbar_item"
        layout="@layout/toolbar_item" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:clipToPadding="false"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_marginBottom="20dp"
       android:layout_below="@+id/toolbar_item"
       android:layout_marginTop="50dp"
       android:id="@+id/linearLayout"
       android:weightSum="1">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="10dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Task Name"
          android:textStyle="bold"
          android:textSize="20dp" />
      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/task_name"
          android:hint="Enter Task Name"/>
  </LinearLayout>
       <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
           android:layout_marginBottom="10dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Due Date"
           android:textStyle="bold"
           android:textSize="20dp" />

           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/task_due_date"
               android:hint="Set Due Date" />

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginBottom="10dp"
           android:layout_weight="0.65">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Task Notes"
               android:textStyle="bold"
               android:textSize="20dp" />
           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Enter Task Name"
               android:id="@+id/task_notes" />
        </LinearLayout>
       <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
           android:layout_marginBottom="10dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Priority Level"
           android:textStyle="bold"
           android:textSize="20dp" />

           <Spinner
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/task_priority_level"
               android:layout_weight="1" />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Status"
               android:textStyle="bold"
               android:textSize="20dp" />

           <Spinner
               android:layout_width="184dp"
               android:layout_height="wrap_content"
               android:id="@+id/task_status"
               android:layout_alignBottom="@+id/linearLayout"
               android:layout_alignRight="@+id/linearLayout"
               android:layout_alignEnd="@+id/linearLayout"
               android:layout_marginLeft="70dp" />


       </LinearLayout>

   </LinearLayout>


</RelativeLayout>
